<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splashfragments.EntryFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/splash_main_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginVertical="20dp"
            android:src="@mipmap/ic_launcher_dummy_round"
            app:layout_constraintBottom_toTopOf="@+id/splash_titletext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/splash_titletext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name_newline"
            android:layout_marginHorizontal="24dp"
            android:textAlignment="center"
            android:textSize="38sp"
            app:layout_constraintBottom_toTopOf="@id/splash_signin_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/splash_main_icon" />

        <Button
            android:id="@+id/splash_signin_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:paddingVertical="25dp"
            android:textSize="20sp"
            android:layout_marginHorizontal="50dp"
            app:layout_constraintBottom_toTopOf="@id/splash_signup_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/splash_titletext" />

        <Button
            android:id="@+id/splash_signup_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="25dp"
            android:text="Sign Up"
            android:textSize="20sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/splash_signin_btn"
            app:layout_constraintStart_toStartOf="@+id/splash_signin_btn"
            app:layout_constraintTop_toBottomOf="@+id/splash_signin_btn" />







    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>